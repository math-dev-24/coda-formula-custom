{
  "manifest_version": 3,
  "name": "Coda Formula Customizer",
  "version": "1.0.2",
  "description": "Custom you editor",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Coda Formula Customizer"
  },
  "content_scripts": [
    {
      "matches": ["https://coda.io/d/*", "*://*.coda.io/d/*"],
      "js": ["src/bundle.js"],
      "run_at": "document_idle"
    }
  ]
}
